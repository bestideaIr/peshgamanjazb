<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_textview"
    android:tag="cards main container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_coursesubinfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >

        <LinearLayout
            android:id="@+id/linearLayoutt"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_margin="12dp"
            android:layout_weight="2"
            android:background="@drawable/border_dots_light"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/img_subcourse"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                app:srcCompat="@drawable/imgrecycl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="هفته اول"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="آهنربای ثروت 1- "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp" />




        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="116dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


